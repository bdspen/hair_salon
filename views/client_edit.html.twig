<html>
    <head>
        <title>Edit Client</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>

    </head>
    <body>
        <div class='container'>

            <h1>Update {{ client.getClientName }}</h1>

                <form action="/client/{{ client.getId }}" method="post">
                    <div class="form-group">
                        <input name="_method" type="hidden" value="patch">

                        <input class="form-control" id="name" name="name" type="text" placeholder="Change Name">

                        <button type="submit" class="btn btn-info">Update</button>
                    </div>
                </form>

                <form action="/client/{{ client.getId }}/delete" method="post">
                    <input name="_method" type="hidden" value="delete">

                    <button type="submit" class="btn btn-danger btn-sm">DELETE</button>
                </form>

        </div>

    </body>
</html>
